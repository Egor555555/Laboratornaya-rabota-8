//Дан целочисленный массив размера n, не содержащий одинаковых чисел. Проверить, образуют ли его элементы арифметическую прогрессию.
//Если образуют, то вывести разность прогрессии, если нет - вывести 0.
#include <iostream>
using namespace std;
int main()
{
    int n;
    cin >> n;
    int* x;
    x = new int[n];
    for (int i = 0; i < n; i++)
        cin >> x[i];
    int r = x[1] - x[0];
    for (int i = 1; i < n; i++) {
        if (r != x[i] - x[i - 1]) {
            r = 0;
        }
    }cout << r;
}
